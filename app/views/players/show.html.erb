                            <td class = "twenty-two"><%= @player.player_stats.sum(:assists) %></td>
                            <td class = "twenty-two"><%= @player.player_stats.sum(:saves) %></td>
                            <td class = "twenty-two"><%= @player.player_stats.sum(:shots) %></td>
                            <td class = "twenty-two"><%= @player.player_stats.sum(:points) %></td>
