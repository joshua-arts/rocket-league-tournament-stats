                <div id = "search" class = "searchbutton center rounded white top-buffer"><i class="fa fa-search sr-icons"></i></div>
            </div>
        </div>
        
        <div class = "searchtable">

            <table class = "white rounded bot-buffer">
                <tr>
                    <th>Team</th>
                    <th>Player Name</th>
                    <th>Region</th>
                    <th>G / G</th>
                    <th>A / G</th>
                    <th>Sa / G</th>
